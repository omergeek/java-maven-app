#!/usr/bin/env groovy

 

pipeline {

    agent any
     
    stages {

        stage("build") {
            steps {
                echo 'build the application...' 
            }
        }
     
        stage("test") {
            steps {
              echo 'test the application...'  
            }
        }
     
        stage("deploy") {

            steps {
               echo 'deplying the application...'     
                     
                }
            }
       
       }
         
}
